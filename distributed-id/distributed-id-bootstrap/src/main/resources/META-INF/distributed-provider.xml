<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:property-placeholder/>

    <dubbo:application name="distributed-provider"/>

<!--    <dubbo:registry protocol="multicast" address="224.5.6.7:1234" />-->
    <dubbo:registry address="nacos://172.16.1.12:8848" />
    <dubbo:protocol port="-1" name="dubbo"/>

    <bean id="distributedIdApplication" class="org.myddd.java.distributed.application.DistributedIdApplicationImpl"/>
    <dubbo:service  serialization="protobuf" interface="org.myddd.java.distributed.api.DistributedIdApplication" ref="distributedIdApplication"/>

</beans>